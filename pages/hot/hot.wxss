.pageTitle{
  text-align: center;
  font-size: 20px;
  color: #ff7000;
  background: #444;
  padding: 10px 0;
}
.film-box{
  display: flex;
  flex-wrap: wrap;
  font-size: 0;
  padding: 1vw;
  background: #444;
}
.film-cell{
  position: relative;
  width: 45vw;
  margin: 5px 2vw;
  height: 70vw;
  padding: 6px;
  background: #222;
  box-sizing: border-box;
}
.filmImg{
  width: 100%;
  height: 100%;
}
.filmTitle{
  height: 30px;
  line-height: 30px;
  position: relative;
  bottom: 30px;
  font-size: 16px;
  color: #fff;
  text-align: center;
  overflow: hidden;
	text-overflow:ellipsis; 
  white-space: nowrap; 
  background: rgba(0,0,0,0.4);
}