.mbody{
  min-height: 100vh;
  background-color: #444;
}
.pageTitle{
  position: relative;
  text-align: center;
  font-size: 20px;
  color: #ff7000;
  background: #333;
  border-top: 1px solid #222;
  border-bottom: 1px solid #222;
  box-shadow: 0 5px 15px #222;
  padding: 10px 0;
}
.pageTitle::before{
  display: block;
  position: absolute;
  top: 0px;
  width: 100%;
  content: '';
  position: absolute;
  border-top: 1px solid #555
}
.film-box{
  display: flex;
  flex-wrap: wrap;
  font-size: 0;
  padding: 1vw;
  background: #444;
}
.film-cell{
  position: relative;
  width: 45vw;
  margin: 5px 2vw;
  border-radius: 2px;
  height: 70vw;
  padding: 6px;
  padding-bottom: 38px;
  background: #222;
  box-sizing: border-box;
  box-shadow: 6px 6px 8px #111;
}
.filmImg{
  width: 100%;
  height: 100%;
}
.filmTitle{
  line-height: 18px;
  /* position: relative;
  bottom: 30px; */
  font-size: 12px;
  color: #fff;
  text-align: center;
  overflow: hidden;
	text-overflow:ellipsis; 
  white-space: nowrap; 
  /* background: rgba(0,0,0,0.4); */
}
.star-box{
  height: 28px;
  text-align: center;
}
.satr-cell{
  display: inline-block;
  margin-right: 5px;
}