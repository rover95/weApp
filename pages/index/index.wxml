<scroll-view>
  <view class="page-title">豆瓣电影TOP250</view>
  <view>
    <navigator class="file-row" wx:for="{{topData}}" wx:key="item.id" url="../film/film?id={{item.id}}">
      <image src="{{item.images.small}}"></image>
      <view class="film.info">
        <text class="row-title">{{item.title}}</text>
        <text class="row-genres">类型：{{item.genres}}</text>
        <text class="row-year">年代：{{item.year}}</text>
        <text class="row-No">No.{{item.No}}</text>
      </view>
      <text class="film-rating">{{item.rating.average}}</text>
    </navigator>
  </view>
</scroll-view>